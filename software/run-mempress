firesim infrasetup
firesim runworkload

cp ${FIRESIM_CONFIGS}/mempress-16MiBL2_1stream_rocket_config_runtime_metasim.yaml ${FIRESIM_DEPLOY}/config_runtime.yaml
firesim infrasetup
firesim runworkload
cp ${FIRESIM_CONFIGS}/mempress-16MiBL2_2stream_rocket_config_runtime_metasim.yaml ${FIRESIM_DEPLOY}/config_runtime.yaml
firesim infrasetup
firesim runworkload
cp ${FIRESIM_CONFIGS}/mempress-16MiBL2_4stream_rocket_config_runtime_metasim.yaml ${FIRESIM_DEPLOY}/config_runtime.yaml
firesim infrasetup
firesim runworkload

# MegaBoom sims
