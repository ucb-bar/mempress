firesim runworkload

cp ${FIRESIM_CONFIGS}/mempress-4MiBL2_1stream_megaboom_config_runtime_metasim.yaml ${FIRESIM_DEPLOY}/config_runtime.yaml
firesim infrasetup
firesim runworkload
cp ${FIRESIM_CONFIGS}/mempress-4MiBL2_2stream_megaboom_config_runtime_metasim.yaml ${FIRESIM_DEPLOY}/config_runtime.yaml
firesim infrasetup
firesim runworkload
cp ${FIRESIM_CONFIGS}/mempress-4MiBL2_4stream_megaboom_config_runtime_metasim.yaml ${FIRESIM_DEPLOY}/config_runtime.yaml
